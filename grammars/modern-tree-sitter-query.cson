name: 'Tree Sitter Query (SCM)'
scopeName: 'source.scm'
type: 'modern-tree-sitter'
parser: 'tree-sitter-query'

injectionRegex: "^(SCM|scm)$"

fileTypes: ['scm']

treeSitter:
  grammar: 'tree-sitter-query/tree-sitter-query.wasm'
  highlightsQuery: 'tree-sitter-query/queries/highlights.scm'
  foldsQuery: 'tree-sitter-query/queries/folds.scm'
  indentsQuery: 'tree-sitter-query/queries/indents.scm'

comment:
  start: '; '
